@model IEnumerable<Fitness.Models.Friend>

@if (Model.Count() > 0)
{
<table class="table">

    <tr>
        <th>
            @Html.Label("Name")
        </th>

        <th>
            @Html.Label("Status")
        </th>

        <th>
            @Html.Label("Options")
        </th>

    </tr>


    @foreach (var item in Model)
    {

        <tr>
            
            @if (item.User.Email == User.Identity.Name)
            {
                <td>
                    @item.User1.FirstName @item.User1.LastName
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @Html.ActionLink("Confirm Friend", "Confirm", new { id = item.FriendsID}, htmlAttributes: new { @class = "btn btn-success"})
                    @Html.ActionLink("Deny Friend", "Deny", new { id = item.FriendsID }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            }
            else
            {
                <td>
                    @item.User.FirstName @item.User.LastName
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @Html.ActionLink("Confirm Friend", "Confirm", new { id = item.FriendsID }, htmlAttributes: new { @class = "btn btn-success" })
                    @Html.ActionLink("Deny Friend", "Deny", new { id = item.FriendsID }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            }

        </tr>

    }


</table>
}