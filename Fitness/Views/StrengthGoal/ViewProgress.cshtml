@model Fitness.Models.StrengthGoalProgressModel
@{
    ViewBag.Title = "View Progress";
}

<h2>View Progress</h2>

<h3>@Model.goal.Name</h3>
<h4>@Model.goal.ExerciseList.Name</h4>
@Html.ActionLink("Add new entry", "Create", "StrengthExercises")

<div class="progress" style="height: 20px;">
    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.percentDone%;">
    </div>

</div>

<div class="text-success col-md-12 " style="font-size: 20px; text-align:center; ">
    @ViewBag.percentDone% Complete
</div>

<table class="table">
    <tr>
        <th>
            Reps
        </th>
        <th>
           Sets
        </th>
        <th>
           Weight
        </th>
        <th>
            Date Recorded
        </th>

    </tr>

    @foreach (var item in Model.progress)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @item.DateRecorded.ToShortDateString()
            </td>
        </tr>
    }

</table>