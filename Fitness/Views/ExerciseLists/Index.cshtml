@model Fitness.Models.StrengthAerobicList

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create a new exercise", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

<div class="col-md-12">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.strengthExercise)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.ActionLink("Add Entry", "Create", "StrengthExercises") |
                        @Html.ActionLink("View Details", "Details", new { id = item.ExerciseListID })
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.aerobicExercise)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.ActionLink("Add Entry", "Create", "AerobicExercises") |
                        @Html.ActionLink("View Details", "Details", new { id = item.ExerciseListID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


